- load static from staticfiles

header.ui.page.grid
  .computer.tablet.only.row
    .row
      .ui.pointing.menu.fixed
        a(href="/"): img(src="{% static 'img/logo.png' %}").logo

        .right.menu
          .item
            .ui.icon.input
              input(placeholder="Search..." type="search")
              i.search.link.icon

          .ui.dropdown.item
            i.user.icon
            | Prisijungti
            i.dropdown.icon
            .menu
              a.item Google
              a.item Facebook
              a.item OpenID

  .mobile.only.row
    .ui.pointing.small.menu.fixed
      a(href="/"): img(src="{% static 'img/logo.png' %}").logo-small
      .right.menu
        .ui.dropdown.item
          i.content.icon
          .menu
            a.item Google
            a.item Facebook
            a.item OpenID
