- extends "base.html"
- load i18n
- load thumbnail
- load manoseimas
- load sboard

- block content
  h1 Parlamentaras

  a(href="{% url 'mp_list_all' %}") Atgal į sąrašą

  .profile-box
    div
      .row-fluid
        .span4
          img(src="/static/img/photo-default.png" title="{{profile.full_name}}").photo
        .span8
          h1
            - block title
              {{ profile.full_name }}

          if profile.fraction_name
            p {{ profile.fraction_name }}

          h3 List of Groups
          table.table.table-striped
            thead
              tr
                th Group name
                th Type
                th Position
            tbody
              for membership in memberships
                tr
                  td {{membership.group.name}}
                  td {{membership.group.type}}
                  td {{membership.position}}

  .biography
    {{biography}}


  if positions
    hr(style="clear: both")
    {% include "mps/help_partial.html" %}
    h2.hr Politiniai sprendimai

    ul.positions
      for position in positions
        li Balsavo
          strong.very(title=position.percent) {{ position.position|lower }}
          a(href="{% nodeurl position.solution.ref %}").profile-solution-title.arrow-before {{ position.solution.ref.title }}

