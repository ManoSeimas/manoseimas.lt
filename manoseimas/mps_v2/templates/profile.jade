- extends "new_base.jade"
- load static from staticfiles
- load nodeurl from sboard

- block title
  | Petras Gražulis


- block middle
  .photo-box.parliamentarian
    .ui.zero.margin.page.grid
      .center.aligned.four.wide.column
        .logo-box
          img(src="{{photo_url}}" title="{{profile.full_name}}")
      .twelve.wide.column
        .title
          h1 {{profile.full_name}}
          h2.fraction-name: a(href="{% url 'mp_fraction' profile.fraction_slug %}") {{profile.fraction_name}}

        .ui.two.column.stackable.grid
          .column.info
            .ui.four.item.tabular.menu
              .item(data-tab="committees").active Komitetai
              .item(data-tab="commission") Komisijos
              .item(data-tab="groups") Grupės
              .item(data-tab="general") Bendra

            .ui.tab(data-tab="committees").active
              for membership in committees
                .group
                  a.name {{membership.group.name}}
                  .membership-type {{membership.position}}
            .ui.tab(data-tab="groups")
              for membership in groups
                .group
                  a.name {{membership.group.name}}
                  .membership-type {{membership.position}}
            .ui.tab(data-tab="commission")
              for membership in commissions
                .group
                  a.name {{membership.group.name}}
                  .membership-type {{membership.position}}
            .ui.tab(data-tab="general")
              .info-block
                .name Išrinktas:
                .info Gargždų (Nr. 31) apygardoje
              .info-block
                .name Iškėlė:
                .info: b Partija Tvarka ir Teisingumas
              .info-block
                .name Frakcijos:
                .info
                  div
                    a(href="{% url 'mp_fraction' profile.fraction_slug %}") Partija Tvarka ir Teisingumas
                    | &nbsp; (nuo 2013-02-15)
                  div
                    a(href="{% url 'mp_fraction' profile.fraction_slug %}") Partija Tvarka ir Teisingumas
                    | &nbsp; (nuo 2013-02-15)
              .info-block
                .name Biuro adresas:
                .info Maironio g. 12-8, Raseiniai m., tel. 861201080. Vytauto g. 105, Ariogala m., 861201081.

          .column.biography
            h2 Biografija

            .bio-text
              | {{biography}}

  .colored-bg
    .ui.zero.margin.page.grid
      .stats-box
        .pie
          .graph
            img(src="{% static 'img/pie.png' %}")
          .info
            .title: h3 Dalyvavimas balsavimuose
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box
        .two-numbers
          h3 Aktyvumas diskusijuose
          .block
            h4.number 652
            p.explanation pasisakymai (vid.)
          .block
            h4.number 89%
            .explanation pasiūlytuose projektuose
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box
        .three-numbers
          h3 Įstatymų projetai
          .block
            h4.number 105
            p.explanation pasiūlyti
          .block
            h4.number 5
            .explanation priimti
          .block
            h4.number 8%
            .explanation palaikymas
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box.total
        .stats
          h3 40%
          .explanation bendras aktyvumas
        .vertical-progress: .bar: .text

  if positions
    .decisions
      .ui.page.grid
        h2 Politiniai sprendimai
          small (DĖMESIO: duomenys praeitos (2008-2012) kadencijos balsavimų!)

      .ui.stackable.three.column.center.aligned.page.grid
          .column
            h3.supports UŽ

            for position in positions.for
              .decision(class=position.klass)
                a(href="{% nodeurl position.node.ref %}" title=position.format_position()) {{ position.node.ref.title }}

          .column
            h3.abstention nei už nei prieš

            for position in positions.neutral
              .decision.abstention
                a(href="{% nodeurl position.node.ref %}" title=position.format_position()) {{ position.node.ref.title }}

          .column
            h3.against PRIEŠ

            for position in positions.against
              .decision(class=position.klass)
                a(href="{% nodeurl position.node.ref %}" title=position.format_position()) {{ position.node.ref.title }}

