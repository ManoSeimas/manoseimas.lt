- extends "base.html"
- load i18n
- load thumbnail
- load manoseimas
- load sboard

- block content
  h1 Parlamentaras

  a(href="{% url 'mp_list_all' %}") Atgal į sąrašą

  .profile-box
    div
      .row-fluid
        .span4
          img(src="{{photo_url}}" title="{{profile.full_name}}").photo
        .span8
          h1
            - block title
              {{ profile.full_name }}

          if profile.fraction_name
            p {{ profile.fraction_name }}

          h3 List of Groups
          table.table.table-striped
            thead
              tr
                th Group name
                th Type
                th Position
            tbody
              for membership in memberships
                tr
                  td {{membership.group.name}}
                  td {{membership.group.type}}
                  td {{membership.position}}
  .biography
    {{biography}}


  if positions
    hr(style="clear: both")
    {% include "mps/help_partial.html" %}
    h2.hr Politiniai sprendimai

    ul.positions
      for position in positions
        li Balsavo
          strong.very(title=position.percent) {{ position.position|lower }}
          a(href="{% nodeurl position.solution.ref %}").profile-solution-title.arrow-before {{ position.solution.ref.title }}
  .statistics
    h2 Stats
    p Pasisakymai: {{stats.statement_count}}
    p Ilgi pasisakymai: {{stats.long_statement_count}}
    p Pasisakė {{stats.contributed_discussion_percentage|floatformat:1}}% diskusijų
    p Balsai: už {{stats.votes.aye}}, prieš {{stats.votes.no}}, susilaikė {{stats.votes.abstain}}
